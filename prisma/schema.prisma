model Post {
  id         String      @id @default("")
  slug       String
  text       String
  title      String      @db.VarChar(255)
  created    DateTime    @default(now()) @map("created_at")
  modified   DateTime?   @updatedAt @map("updated_at")
  categoryId String
  category   Category    @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  images     PostImage[]
  copyright  Boolean     @default(true)

  allowComment Boolean   @default(true) @map("allow_comment")
  tags         PostTag[]

  count Json @default("{\"read\": 0, \"like\": 0}")

  pin      Boolean @default(false)
  pinOrder Int     @default(0) @map("pin_order")

  related     Post[]  @relation("RelatedPosts")
  relatedBy   Post?   @relation("RelatedPosts", fields: [relatedById], references: [id])
  relatedById String? @map("related_by_id")

  @@unique([slug, categoryId])
  @@index([slug])
  @@index([created])
}

model Category {
  id      String   @id @default("")
  name    String   @unique
  slug    String   @unique
  created DateTime @default(now()) @map("created_at")
  Post    Post[]

  @@index([slug], name: "slugIndex")
}
