{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": false,
    "outDir": "./dist",
    "noImplicitAny": false,
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@meta-muse/utils": [
        "../packages/utils"
      ]
    }
  },
  "exclude": [
    "dist",
  ]
}