{
  "name": "@meta-muse/private",
  "description": "",
  "author": "Innei <https://innei.in>",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.7.4",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ]
  },
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" = \"production\" ]; then echo 'skip prepare in production' ;else corepack enable && husky install && pnpm run prisma:generate; fi",
    "prebuild": "rimraf dist && pnpm run prisma:generate",
    "init": "pnpm run prisma:generate && pnpm run migrate:dev",
    "build": "pnpm -C \"apps/core\" run build",
    "dev": "pnpm -C \"apps/core\" run start",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretest": "dotenv -e .env.test pnpm -C prisma run migrate:dev",
    "test": "dotenv -e .env.test vitest",
    "migrate:dev": "pnpm -C prisma run migrate:dev",
    "migrate:deploy": "pnpm -C prisma run migrate:deploy",
    "prisma:generate": "pnpm -C prisma run build"
  },
  "dependencies": {
    "@nestjs/cache-manager": "2.1.0",
    "@nestjs/common": "10.2.4",
    "@nestjs/config": "3.0.1",
    "@nestjs/core": "10.2.4",
    "@nestjs/event-emitter": "2.0.2",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/passport": "10.0.1",
    "@nestjs/platform-fastify": "10.2.4",
    "@nestjs/platform-socket.io": "10.2.4",
    "@nestjs/schedule": "3.0.3",
    "@nestjs/throttler": "5.0.0",
    "@nestjs/websockets": "10.2.4",
    "bcrypt": "5.1.1",
    "cross-env": "7.0.3",
    "lodash": "4.17.21",
    "prisma": "5.2.0",
    "slugify": "1.6.6"
  },
  "devDependencies": {
    "@anatine/zod-mock": "3.13.2",
    "@faker-js/faker": "8.0.2",
    "@innei/bump-version": "^1.5.10",
    "@innei/eslint-config-ts": "^0.11.1",
    "@innei/prettier": "^0.11.1",
    "@nestjs/cli": "10.1.17",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.4",
    "@swc/cli": "0.1.62",
    "@types/bcrypt": "5.0.0",
    "@types/lodash": "4.14.198",
    "dayjs": "1.11.9",
    "dotenv-cli": "7.3.0",
    "eslint": "^8.48.0",
    "fastify": "^4.22.2",
    "husky": "8.0.3",
    "ioredis": "^5.3.2",
    "lint-staged": "14.0.1",
    "nanoid": "3.3.6",
    "prettier": "3.0.3",
    "prisma": "5.2.0",
    "redis-memory-server": "0.7.0",
    "rimraf": "5.0.1",
    "snakecase-keys": "5.4.6",
    "ts-loader": "9.4.4",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2",
    "unplugin-swc": "1.4.2",
    "vite": "4.4.9",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.34.3",
    "zod": "3.22.2",
    "zod-fixture": "2.5.0",
    "zod-prisma-types": "2.7.9",
    "zx": "7.2.3"
  },
  "resolutions": {
    "pino": "./external/pino",
    "*>typescript": "^5.2.2",
    "*>lodash": "4.17.21"
  },
  "redisMemoryServer": {
    "downloadDir": "./tmp/redis/binaries",
    "version": "6.0.10",
    "disablePostinstall": "1",
    "systemBinary": "/opt/homebrew/bin/redis-server"
  }
}