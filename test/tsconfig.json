{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "allowJs": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@core": [
        "../apps/core/src"
      ],
      "@core/*": [
        "../apps/core/src/*"
      ],
      "@test": [
        "."
      ],
      "@test/*": [
        "./*"
      ],
      "@prisma/client": [
        "../prisma/client"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./**/*.ts",
    "../apps/core/src/**/*.ts",
  ]
}