{
  "name": "@meta-muse/core",
  "version": "0.0.1",
  "description": "",
  "author": "Innei <https://innei.in>",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.7.4",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ]
  },
  "scripts": {
    "build": "nest build --webpack",
    "dev": "npm run start",
    "start": "cross-env NODE_ENV=development nest start -w",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "npm run prism:migrate:deploy && cross-env NODE_ENV=production node dist/main.js",
    "prod": "cross-env NODE_ENV=production pm2-runtime start ecosystem.config.js",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:debug": "cross-env NODE_ENV=production nest start --debug --watch"
  },
  "dependencies": {
    "@nestjs/cache-manager": "2.1.0",
    "@nestjs/common": "10.2.4",
    "@nestjs/config": "3.0.1",
    "@nestjs/core": "10.2.4",
    "@nestjs/event-emitter": "2.0.2",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/passport": "10.0.1",
    "@nestjs/platform-fastify": "10.2.4",
    "@nestjs/platform-socket.io": "10.2.4",
    "@nestjs/schedule": "3.0.3",
    "@nestjs/throttler": "5.0.0",
    "@nestjs/websockets": "10.2.4",
    "@prisma/client": "workspace:@meta-muse/prisma@*",
    "@socket.io/redis-adapter": "8.2.1",
    "@socket.io/redis-emitter": "5.1.0",
    "axios": "1.5.0",
    "bcrypt": "5.1.1",
    "cache-manager": "5.2.3",
    "cache-manager-ioredis": "2.1.0",
    "chalk": "^4",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "class-validator-jsonschema": "^5.0.0",
    "consola": "*",
    "cron": "^2.4.3",
    "cross-env": "7.0.3",
    "dayjs": "1.11.9",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "nanoid": "3.3.6",
    "nestjs-zod": "3.0.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "redis": "4.6.8",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "slugify": "1.6.6",
    "snakecase-keys": "5.4.6",
    "zod": "3.22.2",
    "zx-cjs": "7.0.7-0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.17",
    "@nestjs/schematics": "10.0.2",
    "@types/bcrypt": "5.0.0",
    "@types/cache-manager": "4.0.3",
    "@types/jsonwebtoken": "9.0.2",
    "@types/passport-jwt": "3.0.9",
    "@types/supertest": "2.0.12",
    "@types/ua-parser-js": "0.7.37",
    "fastify": "^4.22.2",
    "ioredis": "^5.3.2",
    "zod-prisma-types": "2.7.9",
    "zx": "7.2.3"
  },
  "redisMemoryServer": {
    "downloadDir": "./tmp/redis/binaries",
    "version": "6.0.10",
    "disablePostinstall": "1",
    "systemBinary": "/opt/homebrew/bin/redis-server"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}